<div class="container py-4">
    <div class="flex justify-center mb-2">
        <%= link_to "お名前変える？", edit_user_registration_path,
            class: "btn btn-sm text-blue-600 border-1 border-white hover:border-cyan-500 bg-cyan-200 hover:bg-white shadow-md hover:shadow-none" %>
    </div>

    <div class="flex flex-col items-center">
        <div class="flex items-center mb-4">
            <div class="text-3xl font-bold text-sky-600"><%= "#{current_user.name}" %></div>
            <div class="text-lg font-bold text-sky-500 ml-2"><%= "作・界隈あるある一覧" %></div>
        </div>

        <% if @posts.present? %>
            <div class="flex flex-wrap justify-center gap-4">
                <%= render @posts %>
            </div>
        <% else %>
            <div class="my-10">
                    <%= render 'no_posts' %>
            </div>
        <% end %>
    </div>
</div>

<div class="pl-8">
    <%= render 'shared/index_backbutton' %>
    <%= render 'shared/toppage_backbutton' %>
</div>