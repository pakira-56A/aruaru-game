<%= form_with url: answer_openai_posts_path, method: :post, local: true, class: "font-light text-lg text-fuchsia-500 flex flex-col items-center", id: "myForm" do |f| %>

    <%= image_tag 'openai/openai_1day1try.png', class: 'ml-6 max-w-64 h-auto' %>
    <div class="flex items-center gap-1 mb-2" >
        <img width="40" height="40" src="https://img.icons8.com/nolan/64/bot.png" alt="bot"/>
        <%= f.label :question, "どんな界隈のあるあるで遊ぶ？", for: "inputData" %>
    </div>

    <div class="flex justify-center mb-4">
        <%= f.text_field :question, id: "inputData", placeholder: "未実装だよ！待っててね",
            class: "w-[310px] p-2 border-4 border-fuchsia-300 rounded font-bold font-family-['BIZ UDGothic'] placeholder-gray-300 placeholder:font-light",
            maxlength: 40 %>
    </div>

    <div class="flex justify-center relative inline-block">
        <%= f.button type: "submit", class: "start-btn opacity-1 transition-all duration-300 flex items-center justify-center rounded-md" do %>
            <div class="start-btn-content shadow-md
                        flex w-[270px] h-[70px] border-4 border-white rounded-[40px] bg-pink-200
                        perspective-[150px] transform-style-[preserve-3d]">
                <style>
                    .start-btn:hover .start-btn-front {opacity: 0; /* 表面文字を非表示 */}
                    .start-btn:hover .start-btn-back {opacity: 1; /* 裏面文字を表示 */}
                    .start-btn:hover .start-btn-content {
                        -webkit-transform: rotateX(0.5turn) rotateX(-0.03turn);
                        transform: rotateX(0.5turn) rotateX(-0.03turn);
                        -webkit-transition-duration: 0.5s; /* 古いWebKitブラウザ用 */
                        transition-duration: 0.5s; /* 標準ブラウザ用 */
                        background: #f2f5f6; }
                </style>
                <div class="start-btn-front duration-500
                            text-red-500 font-bold text-lg whitespace-nowrap absolute
                            top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2
                            transition-opacity duration-500 opacity-100 ">
                    神経衰弱スタート
                </div>
                <div class="start-btn-back duration-300 rotate-180 -scale-x-100
                            text-[#52b1ff] font-bold text-lg whitespace-nowrap absolute
                            top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2
                            transition-opacity opacity-0 hover:opacity-100">
                    AIが思うあるあるって？
                </div>
            </div>
        <% end %>
    </div>
<% end %>